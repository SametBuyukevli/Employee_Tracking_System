<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('../partials/head') %>
    <link href="/static/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../partials/sidebar') %>

        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../partials/topbar') %>
                <!-- End of Topbar -->
               
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="card">

                        <div class="card-body">

                            
                        <% if(message.success) { %>
                            <div id="message" class="alert alert-success" role="alert">
                              <%= message.success %>
                            </div>
                      <% } else if(message.error) { %>
                          <div id="message" class="alert alert-danger" role="alert">
                              <%= message.error %>
                            </div>
                      <% } %>

                      
                      
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>T.C No</th>
                                            <th>Role</th>
                                            <th>Departman</th>
                                            <th>Service</th>
                                            <th>First Name</th>
                                            <th>Middle Name</th>
                                            <th>Last Name</th>
                                            <th>Gender</th>
                                            <th>Address</th>
                                            <th>Date Of Birth</th>
                                            <th>Phone</th>
                                            <th>Email</th>
                                            <th>Salary</th>
                                            <th>Permission</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                        </tr>
                                    </thead>
                                    
                                    <tbody>

                                        <% employees.forEach(employee => { %>
                                            <tr>
                                                <td><%= employee.tckn %></td>
                                                <td><%= employee.roleName %></td>
                                                <td><%= employee.deptName %></td>
                                                <td><%= employee.numberPlate %></td>
                                                <td><%= employee.firstName %></td>
                                                <td><%= employee.middleName %></td>
                                                <td><%= employee.lastName %></td>
                                                <td>
                                                    <% if(employee.gender == 1) { %>
                                                        Erkek
                                                    <% }else if(employee.gender == 2) { %>
                                                        Kadın
                                                    <% } else { %>
                                                        Diğer
                                                    <% } %>
                      
                                                </td>
                                                <td><%= employee.address %></td>
                                                <td><%= new Date(employee.dateOfBirth).toLocaleDateString('tr-TR', {year: 'numeric',month: 'long',day: 'numeric'}); %></td>
                                                <td><%= employee.phone %></td>
                                                <td><%= employee.email %></td>
                                                <td><%= employee.salary %></td>
                                                <td><%= employee.permission %></td>
                                                <td><%= new Date(employee.startDate).toLocaleDateString('tr-TR', {year: 'numeric',month: 'long',day: 'numeric'}); %></td>
                                                <td><%= employee.endDate ? new Date(employee.endDate).toLocaleDateString('tr-TR', {year: 'numeric', month: 'long', day: 'numeric'}) : '' %></td>                                            
                                            </tr>
                                        <% }) %>
                                       
                                    
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                      </div>

                  
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../partials/footer') %>

            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('../partials/modal') %>

    <%- include('../partials/script') %>
    <script src="/static/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/static/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script src="/static/js/demo/datatables-demo.js"></script>
</body>

</html>