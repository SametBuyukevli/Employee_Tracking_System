<body>
    <div class="container">

        <div class="box">
            <div class="box-alert">
                <% if (message.success) { %>
                    <div id="message" class="alert alert-success" role="alert">
                        <%= message.success %>
                    </div>
                    <!-- basarili bir giris yapilirsa 3sn bekleyip /employees sayfasnian yonlendirir -->

                    <script>
                        setTimeout(function () {
                            window.location.href = "/employees";
                        }, 3000);
                    </script>

                    <% } else if (message.error) { %>
                        <div id="message" class="alert alert-danger" role="alert">
                            <%= message.error %>
                        </div>
                        <!-- sifre hatali girildiyse password hatali der ve login sayfasina gonderir -->

                        <script>
                            setTimeout(function () {
                                window.location.href = "/login";
                            }, 3000);
                        </script>

                        <% }else if (message.error1) { %>
                            <div id="message" class="alert alert-danger" role="alert">
                                <%= message.error1 %>
                            </div>
                            <!-- kullanici eger kayitli bir hesabi yoksa loogin sayfasina geri gonderir -->
                            <script>
                                setTimeout(function () {
                                    window.location.href = "/login";
                                }, 3000);
                            </script>
                            <% } %>

            </div>
        </div>
    </div>
    </div>

</body>

